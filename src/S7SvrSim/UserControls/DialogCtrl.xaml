<UserControl x:Class="S7SvrSim.UserControls.DialogCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:S7SvrSim.UserControls"
             xmlns:vm="clr-namespace:S7SvrSim.ViewModels"
             xmlns:lu="clr-namespace:Less.Utils.WPF;assembly=Less.Utils.WPF"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:Background="White"
             d:DataContext="{d:DesignInstance Type=vm:DialogViewModel}"
             >
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="1"
                 FontSize="16"
                 md:TextFieldAssist.SuffixText="{Binding SuffixText}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 md:HintAssist.Hint="{Binding Title}"
                 MaxWidth="200"
                 >
            <TextBox.Text>
                <Binding Path="Text"
                         Mode="TwoWay"
                         UpdateSourceTrigger="PropertyChanged"
                         >
                    <Binding.ValidationRules>
                        <lu:EventValidation ValidateEvent="EventValidation_ValidateEvent" />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    Margin="10 5 0 0"
                    >
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Content="ACCEPT"
                    Padding="4 4 4 4"
                    IsDefault="True"
                    Command="{x:Static md:DialogHost.CloseDialogCommand}"
                    CommandParameter="{Binding Text}"
                    />
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Content="CANCEL"
                    Padding="4 4 4 4"
                    Margin="10 0 0 0"
                    IsCancel="True"
                    Command="{x:Static md:DialogHost.CloseDialogCommand}"
                    />
        </StackPanel>
    </Grid>
</UserControl>
