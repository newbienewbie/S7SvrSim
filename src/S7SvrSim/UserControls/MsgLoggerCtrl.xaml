<UserControl x:Class="S7SvrSim.UserControls.MsgLoggerCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:S7SvrSim.UserControls"
             xmlns:vm="clr-namespace:S7SvrSim.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:MsgLoggerVM}"
             
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button"
                   BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                <Setter Property="VerticalAlignment"
                        Value="Center"></Setter>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Content="清除日志"
                HorizontalAlignment="Right"
                Command="{Binding CleanLogCommand}" />

        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Background="Azure"
                      local:Helper.AutoScroll="{Binding IsLogsChanged}" Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Logs}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Timestamp,StringFormat={}{0:HH:mm:ss.ff}:}"></TextBlock>
                            <TextBlock>
                            <Run Text="["></Run>
                            <Run Text="{Binding Level}"></Run>
                            <Run Text="]: "></Run>
                            </TextBlock>
                            <TextBlock Text="{Binding Content}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
    
</UserControl>
