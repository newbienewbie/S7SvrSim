<UserControl x:Class="S7SvrSim.UserControls.SignalWatchCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:S7SvrSim.UserControls"
             xmlns:vm="clr-namespace:S7SvrSim.ViewModels"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:lu="clr-namespace:Less.Utils.WPF;assembly=Less.Utils.WPF"
             xmlns:shared="clr-namespace:S7SvrSim.Shared"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:Background="White"
             d:DataContext="{d:DesignInstance Type=vm:SignalWatchVM}"
             >
    <UserControl.Resources>
        <lu:BindingProxy x:Key="DataContextProxy"
                         Data="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext}"
                         />
    </UserControl.Resources>
    <md:DrawerHost>
        <md:DrawerHost.LeftDrawerContent>
            <StackPanel />
        </md:DrawerHost.LeftDrawerContent>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top">
                <md:Card Margin="1">
                    <Menu>
                        <MenuItem Header="新建信号"
                                  ItemsSource="{Binding SignalTypes}"
                                  >
                            <MenuItem.ItemContainerStyle>
                                <Style TargetType="MenuItem"
                                       BasedOn="{StaticResource ResourceKey={x:Type MenuItem}}"
                                       >
                                    <Setter Property="Command" Value="{Binding Source={StaticResource DataContextProxy}, Path=Data.NewSignalCommand}" />
                                    <Setter Property="CommandParameter" Value="{Binding .}" />
                                </Style>
                            </MenuItem.ItemContainerStyle>
                            <MenuItem.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </MenuItem.ItemTemplate>
                        </MenuItem>
                    </Menu>
                </md:Card>
                <StackPanel Orientation="Horizontal"
                            Margin="5 5"
                            >
                    <TextBlock Text="扫描间隔："
                               Style="{StaticResource MaterialDesignTextBlock}"
                               />
                    <TextBox Text="{Binding ScanSpan}"
                             Width="80"
                             d:Text="123"
                             />
                    <TextBlock Text="ms"
                               Style="{StaticResource MaterialDesignTextBlock}"
                               />
                </StackPanel>
            </StackPanel>
            <DataGrid ItemsSource="{Binding Signals}"
                      AutoGenerateColumns="False"
                      CanUserDeleteRows="False"
                      CanUserAddRows="False"
                      >
                <DataGrid.Columns>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                        Content="{md:PackIcon Kind=Delete}"
                                        Command="{Binding Source={StaticResource DataContextProxy}, Path=Data.RemoveSignalCommand}"
                                        CommandParameter="{Binding .}"
                                        />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding Value.Name}"
                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                        />
                    <md:DataGridComboBoxColumn Header="Type"
                                               ItemsSource="{Binding Data.SignalTypes, Source={StaticResource DataContextProxy}}"
                                               DisplayMemberPath="Name"
                                               SelectedItemBinding="{Binding Other}"
                                               />
                    <DataGridTextColumn Header="Address"
                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                        >
                        <DataGridTextColumn.Binding>
                            <Binding Path="Value.FormatAddress">
                                <Binding.ValidationRules>
                                    <lu:EventValidation ValidateEvent="EventValidation_ValidateEvent" />
                                </Binding.ValidationRules>
                            </Binding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Value"
                                        Binding="{Binding Value.Value}"
                                        IsReadOnly="True"
                                        />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </md:DrawerHost>
</UserControl>
