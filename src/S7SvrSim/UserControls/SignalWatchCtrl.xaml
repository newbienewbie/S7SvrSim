<UserControl x:Class="S7SvrSim.UserControls.SignalWatchCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:S7SvrSim.UserControls"
             xmlns:vm="clr-namespace:S7SvrSim.ViewModels"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:lu="clr-namespace:Less.Utils.WPF;assembly=Less.Utils.WPF"
             xmlns:shared="clr-namespace:S7SvrSim.Shared"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:Background="White"
             d:DataContext="{d:DesignInstance Type=vm:SignalWatchVM}"
             >
    <UserControl.Resources>
        <lu:BindingProxy x:Key="DataContextProxy"
                         Data="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext}"
                         />
        <shared:AddressConverter x:Key="AddressConverter" />
    </UserControl.Resources>
    <md:DrawerHost>
        <md:DrawerHost.LeftDrawerContent>
            <StackPanel />
        </md:DrawerHost.LeftDrawerContent>
        <DockPanel>
            <md:Card DockPanel.Dock="Top"
                     Margin="1"
                     >
                <Menu>
                    <MenuItem Header="新建信号"
                              ItemsSource="{Binding SignalTypes}"
                              >
                        <MenuItem.ItemContainerStyle>
                            <Style TargetType="MenuItem"
                                   BasedOn="{StaticResource ResourceKey={x:Type MenuItem}}"
                                   >
                                <Setter Property="Command" Value="{Binding Source={StaticResource DataContextProxy}, Path=Data.NewSignalCommand}" />
                                <Setter Property="CommandParameter" Value="{Binding .}" />
                            </Style>
                        </MenuItem.ItemContainerStyle>
                        <MenuItem.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </MenuItem.ItemTemplate>
                    </MenuItem>
                    <MenuItem Header="扫描间隔"
                              ItemsSource="{Binding ScanSpans}"
                              >
                        <MenuItem.ItemContainerStyle>
                            <Style TargetType="MenuItem"
                                   BasedOn="{StaticResource ResourceKey={x:Type MenuItem}}"
                                   >
                                <Setter Property="IsCheckable" Value="True" />
                                <Setter Property="IsChecked" Value="{Binding Boolean}" />
                                <Setter Property="Header" Value="{Binding Value}" />
                            </Style>
                        </MenuItem.ItemContainerStyle>
                    </MenuItem>
                </Menu>
            </md:Card>
            <DataGrid ItemsSource="{Binding Signals}"
                      AutoGenerateColumns="False"
                      CanUserDeleteRows="True"
                      CanUserAddRows="False"
                      Style="{StaticResource MaterialDesignDataGrid}"
                      >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding Value.Name}"
                                        />
                    <DataGridComboBoxColumn Header="Type"
                                            ItemsSource="{Binding Data.SignalTypes, Source={StaticResource DataContextProxy}}"
                                            DisplayMemberPath="Name"
                                            SelectedItemBinding="{Binding Other}"
                                            />
                    <DataGridTextColumn Header="Address"
                                        Binding="{Binding Value.FormatAddress}"
                                        />
                    <DataGridTextColumn Header="Value"
                                        Binding="{Binding Value.Value}"
                                        IsReadOnly="True"
                                        />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </md:DrawerHost>
</UserControl>
