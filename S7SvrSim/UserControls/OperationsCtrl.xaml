                        </Grid>
                    </GroupBox>
                    <GroupBox Header="写操作">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBox 
                                Grid.Row="0" Grid.Column="0">
                            </TextBox>
                            <Button Content="写入" 
                                    HorizontalAlignment="Center"
                                    Grid.Column="1">
                            </Button>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </TabItem>
